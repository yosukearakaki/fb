<div class="container">
  <h2>ユーザー一覧</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <ul style="list-style:none;">
          <li><%= link_to user.name, user %></li>
          <li><% if user.id != current_user.id %></li>
          <li><%= link_to 'メッセージを送る', conversations_path(sender_id: current_user.id, recipient_id: user.id), method: 'post'%></li>
        </ul>
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
        <% end %>
      </div>
  <% end %>
</div>
